<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wkcto.crm.settings.dao.DicValueDao">
	
	<select id="getByTypeCode" resultType="DicValue">
		select * from tbl_dic_value where typeCode = #{typeCode} order by orderNo asc
	</select>
	
	<select id="getByTypeCodeAndValue" resultType="DicValue">
		select * from tbl_dic_value where typeCode = #{arg0} and value = #{arg1}
	</select>
	
	<insert id="save" parameterType="DicValue">
		insert into tbl_dic_value
			(id,value,text,orderNo,typeCode)
		values
			(#{id},#{value},#{text},#{orderNo},#{typeCode})
	</insert>
	
</mapper>












